<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_card_view"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/left_gutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <android.support.constraint.Guideline
            android:id="@+id/right_gutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <ImageView
            android:id="@+id/movie_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/left_gutter"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@color/colorPrimaryDark"
            tools:src="@drawable/ic_movies" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:lines="1"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/movie_rating"
            app:layout_constraintEnd_toStartOf="@id/right_gutter"
            app:layout_constraintStart_toEndOf="@id/movie_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="Unnecessarily long movie title example" />

        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_title"
            app:layout_constraintStart_toEndOf="@id/movie_picture"
            app:layout_constraintEnd_toStartOf="@id/right_gutter"
            app:layout_constraintBottom_toTopOf="@+id/movie_genre"
            tools:text="Rating" />

        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/movie_rating"
            app:layout_constraintStart_toEndOf="@id/movie_picture"
            app:layout_constraintEnd_toStartOf="@id/right_gutter"
            app:layout_constraintBottom_toTopOf="@+id/movie_release_date"
            tools:text="Genre" />

        <TextView
            android:id="@+id/movie_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@+id/movie_genre"
            app:layout_constraintStart_toEndOf="@id/movie_picture"
            app:layout_constraintEnd_toStartOf="@id/right_gutter"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Januray 1st, 2018" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>