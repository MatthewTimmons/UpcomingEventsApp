<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorSecondary">

    <EditText
        android:id="@+id/movie_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie title"
        android:inputType="textCapSentences"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/movie_genre_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie genre"
        android:inputType="textCapSentences"
        app:layout_constraintTop_toBottomOf="@id/movie_title_edit_text"/>

    <EditText
        android:id="@+id/movie_release_date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Release Date"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/movie_genre_edit_text"/>

    <LinearLayout
        android:id="@+id/movie_rating_icons"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/movie_release_date_edit_text">

        <ImageView
            android:id="@+id/cancel_sign"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorSecondary"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cancel_sign" />

        <ImageView
            android:id="@+id/rated_g"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorSecondary"
            android:scaleType="fitCenter"
            android:src="@drawable/movie_rating_g" />

        <ImageView
            android:id="@+id/rated_pg"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorSecondary"
            android:scaleType="fitCenter"
            android:src="@drawable/movie_rating_pg" />

        <ImageView
            android:id="@+id/rated_pg_13"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorSecondary"
            android:scaleType="fitCenter"
            android:src="@drawable/movie_rating_pg_13" />

        <ImageView
            android:id="@+id/rated_r"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorSecondary"
            android:scaleType="fitCenter"
            android:src="@drawable/movie_rating_r" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/rating_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:max="4"
        app:layout_constraintTop_toBottomOf="@id/movie_rating_icons"
        style="@style/WhiteSeekbar"
        app:tickMarkTint= "@color/white"
        />

    <Spinner
        android:id="@+id/movie_rating_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rating_seekbar"/>

</android.support.constraint.ConstraintLayout>